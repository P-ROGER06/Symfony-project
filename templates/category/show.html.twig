{% extends 'base.html.twig' %}

{% block title %}
	Category #{{ category.name }}
{% endblock %}

{% block body %}
<h1>{{ category.name }}</h1>
	<div class="card-group">
		{% for program in programs %}
			<div class="card mb-3 ml-5 mr-5" style="min-width: 540px;">
				<div class="row g-0">
					<div class="col-md-4">
						<a href="{{ path("program_show", { id: program.id }) }}"><img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster"></a>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ program.title }}
								- Catégorie :
								{{ program.category.name }}</h5>
							<p class="card-text text-truncate ">{{ program.summary }}
							</p>
							<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
						</div>
					</div>
				</div>
			</div>
		{% else %}
			Aucune série trouvée
		{% endfor %}
	</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>

{% endblock %}
